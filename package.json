{
    "name": "logseq-plugin-template-typescript",
    "description": "A template for Logseq plugin written in TypeScript",
    "repository": "https://github.com/YU000jp/logseq-plugin-template-typescript.git",
    "author": "YU000jp",
    "license": "MIT",
    "logseq": {
        "id": "template-typescript",
        "title": "Template TypeScript",
        "icon": "./icon.svg",
        "main": "./dist/index.html"
    },
    "effect": true,
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "clean": "rm -r ./dist/* || true",
        "dev": "vite",
        "build": "tsc && vite build --mode=dev",
        "prod": "npm run clean && vite build"
    },
    "dependencies": {
        "@logseq/libs": "^0.0.14"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/exec": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^18.15.11",
        "conventional-changelog-conventionalcommits": "^5.0.0",
        "cz-conventional-changelog": "^3.3.0",
        "jest": "^29.5.0",
        "npx": "^10.2.2",
        "semantic-release": "^21.0.1",
        "typescript": "^5.0.4",
        "vite": "^4.2.1",
        "vite-plugin-logseq": "^1.1.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}